---
import BaseLayout from "../layouts/BaseLayout.astro";
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Réalisations — Barthès Maçonnerie">
  <section>
    <h2>Réalisations</h2>

    <div class="projects-grid">
      <a class="project-card" href={`${base}realisations/isolation-chanvre/`}>
        <img src={`${base}images/realisations/isolation-chanvre/01.jpg`} alt="" />
        <div class="project-overlay">
          <h3>Isolation en blocs de chanvre</h3>
          <p>Solution naturelle et durable améliorant le confort thermique.</p>
        </div>
      </a>

      <a class="project-card" href={`${base}realisations/bibliotheque-xvii/`}>
        <img src={`${base}images/realisations/bibliotheque-xvii/01.jpg`} alt="" />
        <div class="project-overlay">
          <h3>Bibliothèque du XVIIᵉ siècle</h3>
          <p>Reprise des enduits et restauration des voûtes en brique.</p>
        </div>
      </a>

      <a class="project-card" href={`${base}realisations/eglise-xve/`}>
        <img src={`${base}images/realisations/eglise-xve/01.jpg`} alt="" />
        <div class="project-overlay">
          <h3>Église du XVᵉ siècle</h3>
          <p>Enduits à la chaux et restauration des arcs brisés.</p>
        </div>
      </a>

      <a class="project-card" href={`${base}realisations/bati-vivant/`}>
        <img src={`${base}images/realisations/bati-vivant/01.jpg`} alt="" />
        <div class="project-overlay">
          <h3>Bâti vivant</h3>
          <p>Terre, chaux et matériaux recyclés en Bolivie.</p>
        </div>
      </a>

      <a class="project-card" href={`${base}realisations/cheminee/`}>
        <img src={`${base}images/realisations/cheminee/01.jpg`} alt="" />
        <div class="project-overlay">
          <h3>Restauration de cheminée</h3>
          <p>Enduit traditionnel et restitution de l’ouvrage.</p>
        </div>
      </a>

      <a class="project-card" href={`${base}realisations/restauration-bordeaux/`}>
        <img src={`${base}images/realisations/restauration-bordeaux/01.jpg`} alt="" />
        <div class="project-overlay">
          <h3>Bâti ancien — Bordeaux</h3>
          <p>Maçonnerie traditionnelle en pierre.</p>
        </div>
      </a>

      <a class="project-card" href={`${base}realisations/terre-chaux-la-paz/`}>
        <img src={`${base}images/realisations/terre-chaux-la-paz/01.jpg`} alt="" />
        <div class="project-overlay">
          <h3>Terre & chaux — La Paz</h3>
          <p>Projet communautaire en matériaux recyclés.</p>
        </div>
      </a>
    </div>
  </section>
</BaseLayout>
