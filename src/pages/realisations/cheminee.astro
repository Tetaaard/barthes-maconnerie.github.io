---
import BaseLayout from "../../layouts/BaseLayout.astro";
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Restauration de cheminée — Barthès Maçonnerie">
  <article>
    <h2>Restauration de cheminée</h2>

    <p>
      Avancement d’une restauration de cheminée et réalisation d’un enduit
      traditionnel, dans le respect du patrimoine existant.
    </p>

    <p>
      Travail artisanal visant à redonner cohérence, solidité et lecture
      architecturale à l’ouvrage, en s’appuyant sur des techniques et matériaux
      compatibles avec le bâti ancien.
    </p>

    <!-- Carousel -->
    <div class="carousel">
      <div class="carousel-track">
        <img
          src={`${base}images/realisations/cheminee/01.jpg`}
          alt="Restauration de cheminée – état initial"
          loading="lazy"
        />
        <img
          src={`${base}images/realisations/cheminee/02.jpg`}
          alt="Travail de reprise de la cheminée"
          loading="lazy"
        />
        <img
          src={`${base}images/realisations/cheminee/03.jpg`}
          alt="Application de l’enduit traditionnel"
          loading="lazy"
        />
        <img
          src={`${base}images/realisations/cheminee/04.jpg`}
          alt="Cheminée restaurée – vue finale"
          loading="lazy"
        />
      </div>

      <button class="carousel-btn prev" aria-label="Image précédente">‹</button>
      <button class="carousel-btn next" aria-label="Image suivante">›</button>
    </div>
  </article>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const carousel = document.querySelector(".carousel");
    if (!carousel) return;

    const track = carousel.querySelector(".carousel-track");
    const slides = Array.from(track.children);
    const prevBtn = carousel.querySelector(".carousel-btn.prev");
    const nextBtn = carousel.querySelector(".carousel-btn.next");

    let index = 0;

    const goToSlide = (i) => {
      index = Math.max(0, Math.min(i, slides.length - 1));
      slides[index].scrollIntoView({
        behavior: "smooth",
        inline: "center"
      });
    };

    prevBtn?.addEventListener("click", () => {
      goToSlide(index - 1);
    });

    nextBtn?.addEventListener("click", () => {
      goToSlide(index + 1);
    });
  });
</script>

</BaseLayout>
