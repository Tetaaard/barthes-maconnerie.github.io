---
const { title = "Barthès Maçonnerie" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <meta
    name="description"
    content="Maçonnerie traditionnelle, restauration du patrimoine et éco-construction. Savoir-faire artisanal."
  />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link
    href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Inter:wght@300;400;500&display=swap"
    rel="stylesheet"
  >

  <style>
    :root {
      --bg: #f6f4ef;
      --text: #1e1e1e;
      --muted: #6f6f6f;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
    }

    h1, h2, h3 {
      font-family: 'Cormorant Garamond', serif;
      font-weight: 600;
      margin-top: 0;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    header,
    footer {
      padding: 2rem;
      max-width: 1200px;
      margin: auto;
    }

    header h1 {
      margin-bottom: 0.5rem;
    }

    nav a {
      margin-right: 1.5rem;
      font-size: 0.95rem;
      color: var(--muted);
    }

    nav a:hover {
      color: var(--text);
    }

    main {
      max-width: 1200px;
      margin: auto;
      padding: 2rem;
    }

    section {
      margin-bottom: 4rem;
    }

    /* Articles & projets */

    article {
      max-width: 900px;
      margin: auto;
    }

    article h2 {
      margin-bottom: 1rem;
    }

    article h3 {
      margin-bottom: 0.3rem;
    }

    article p {
      margin-bottom: 1.2rem;
      color: #2a2a2a;
    }

    article ul {
      margin-left: 1.2rem;
      margin-bottom: 2rem;
    }

    article li {
      margin-bottom: 0.4rem;
    }

    /* Galerie */

    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1rem;
      margin-top: 2.5rem;
    }

    .gallery img {
      width: 100%;
      height: auto;
      display: block;
    }

    /* Caroussel */

    :global(.carousel) {
      position: relative;
      margin-top: 3rem;
    }

    :global(.carousel-track) {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
      position: relative;
      z-index: 1;
    }

    :global(.carousel-track::-webkit-scrollbar) {
      display: none;
    }

    :global(.carousel-track img) {
      flex: 0 0 100%;
      width: 100%;
      height: auto;
      max-height: 70vh;
      object-fit: contain;
      scroll-snap-align: center;
      border-radius: 4px;
      background: #eae6dc;
    }

    /* Navigation */

    :global(.carousel-btn) {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(246, 244, 239, 0.95);
      border: none;
      font-size: 2rem;
      padding: 0.4rem 0.8rem;
      cursor: pointer;
      color: #1e1e1e;
      line-height: 1;
      transition: opacity 0.2s ease;
      z-index: 10;
      pointer-events: auto;
    }

    :global(.carousel-btn:hover) {
      opacity: 0.7;
    }

    :global(.carousel-btn.prev) {
      left: 0.5rem;
    }

    :global(.carousel-btn.next) {
      right: 0.5rem;
    }

    /* Responsive */

    @media (max-width: 768px) {
      :global(.carousel-btn) {
        font-size: 1.6rem;
      }
    }
    
    /* === Projects Grid === */

    :global(.projects-grid) {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    :global(.project-card) {
      display: block;
      background: #fff;
      border-radius: 6px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0,0,0,0.08);
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    :global(.project-card:hover) {
      transform: translateY(-4px);
      box-shadow: 0 12px 28px rgba(0,0,0,0.12);
    }

    :global(.project-card img) {
      width: 100%;
      height: 220px;
      object-fit: cover;
      display: block;
    }

    :global(.project-content) {
      padding: 1.2rem 1.3rem 1.4rem;
    }

    :global(.project-content h3) {
      margin: 0 0 0.4rem;
      font-size: 1.25rem;
    }

    :global(.project-content p) {
      margin: 0;
      font-size: 0.95rem;
      color: var(--muted);
    }

    @media (max-width: 600px) {
      :global(.project-card img) {
        height: 180px;
      }
    }

    /* Footer */

    footer p {
      font-size: 0.85rem;
      color: var(--muted);
    }

    /* Responsive léger */

    @media (max-width: 768px) {
      header,
      footer,
      main {
        padding: 1.5rem;
      }

      nav a {
        display: inline-block;
        margin-bottom: 0.5rem;
      }
    }
  </style>
</head>

<body>
  <header>
    <h1>Barthès Maçonnerie</h1>
    <nav>
      <a href={`${base}`}>Accueil</a>
      <a href={`${base}atelier/`}>L’Atelier</a>
      <a href={`${base}savoir-faire/`}>Savoir-faire</a>
      <a href={`${base}realisations/`}>Réalisations</a>
      <a href={`${base}contact/`}>Contact</a>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>
      © {new Date().getFullYear()} — Pierre Barthès · Maçonnerie traditionnelle & patrimoine
    </p>
  </footer>
</body>
</html>
