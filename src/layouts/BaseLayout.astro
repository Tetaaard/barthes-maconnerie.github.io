---
const { title = "Barth√®s Ma√ßonnerie" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <meta
    name="description"
    content="Ma√ßonnerie traditionnelle, restauration du patrimoine et √©co-construction. Savoir-faire artisanal."
  />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link
    href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Inter:wght@300;400;500&display=swap"
    rel="stylesheet"
  >

  <style>
    :root {
      --bg: #f6f4ef;
      --text: #1e1e1e;
      --muted: #6f6f6f;
      --beige: #f1ede4;
      --dark: #2f3441;
      --brown: #3e2721;
      --brand-main: #6b2e2a;   /* brun/bordeaux du logo */
      --brand-muted: #8a6f6a;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
    }

    h1, h2, h3 {
      font-family: 'Cormorant Garamond', serif;
      font-weight: 600;
      margin-top: 0;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    header,
    footer {
      padding: 2rem;
      max-width: 1200px;
      margin: auto;
    }

    header h1 {
      margin-bottom: 0.5rem;
    }

    nav a {
      margin-right: 1.5rem;
      font-size: 0.95rem;
      color: var(--muted);
    }

    nav a:hover {
      color: var(--text);
    }

    main {
      max-width: 1200px;
      margin: auto;
      padding: 2rem;
    }

    section {
      margin-bottom: 4rem;
    }

    article {
      max-width: 900px;
      margin: auto;
    }

    article p {
      margin-bottom: 1.2rem;
      color: #2a2a2a;
    }

    /* ========================= */
    /* === PROJECTS GRID ======= */
    /* ========================= */

    :global(.projects-grid) {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    :global(.project-card) {
      position: relative;
      display: block;
      overflow: hidden;
      border-radius: 6px; /* tr√®s l√©ger */
      background: #000;
    }

    :global(.project-card img) {
      width: 100%;
      height: 100%;
      aspect-ratio: 4 / 5;
      object-fit: cover;
      display: block;
      transition: transform 0.6s ease;
    }

    :global(.project-overlay) {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.45),
        rgba(0, 0, 0, 0.15)
      );
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 1.4rem;
      color: var(--beige);
    }

    :global(.project-overlay h3) {
      margin: 0 0 0.4rem;
      font-size: 1.25rem;
      line-height: 1.2;
    }

    :global(.project-overlay p) {
      margin: 0;
      font-size: 0.9rem;
      opacity: 0.9;
    }

    :global(.project-card:hover img) {
      transform: scale(1.04);
    }

    /* ========================= */
    /* === CAROUSEL ============ */
    /* ========================= */

    :global(.carousel) {
      position: relative;
      margin-top: 3rem;
    }

    :global(.carousel-track) {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
    }

    :global(.carousel-track::-webkit-scrollbar) {
      display: none;
    }

    :global(.carousel-track img) {
      flex: 0 0 100%;
      max-height: 70vh;
      object-fit: contain;
      scroll-snap-align: center;
      border-radius: 4px;
      background: #eae6dc;
    }

    /* Navigation */

    :global(.carousel-btn) {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(246, 244, 239, 0.95);
      border: none;
      font-size: 2rem;
      padding: 0.4rem 0.8rem;
      cursor: pointer;
      z-index: 10;
    }

    :global(.carousel-btn.prev) { left: 0.5rem; }
    :global(.carousel-btn.next) { right: 0.5rem; }

    /* ========================= */
    /* === CONTACT ============= */
    /* ========================= */

    :global(.contact-wrapper) {
      display: grid;
      grid-template-columns: 0.85fr 1.15fr;
      gap: 3rem;
      padding: 3.2rem;
      margin-top: 3rem;
      background: var(--beige);
      border-radius: 14px;
      border: 1px solid rgba(0,0,0,0.03);

      box-shadow:
        0 18px 40px rgba(0,0,0,0.08),
        inset 4px 4px 8px rgba(0,0,0,0.04),
        inset -4px -4px 8px rgba(255,255,255,0.6);
    }

    :global(.contact-image) {
      border-radius: 10px;
      overflow: hidden;
    }

    :global(.contact-image img) {
      width: 100%;
      height: 100%;
      min-height: 540px;
      object-fit: cover;
      display: block;
    }

    :global(.contact-form) {
      background: var(--bg);
      padding: 3rem;
      border-radius: 12px;
      box-shadow:
        6px 6px 18px rgba(0,0,0,0.08),
        -6px -6px 18px rgba(255,255,255,0.7);
    }

    /* üî§ TITRE FORMULAIRE = m√™me typo que le logo */
    :global(.contact-form h2) {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.9rem;
      margin-bottom: 0.6rem;
    }

    :global(.contact-intro) {
      color: var(--text);
      margin-bottom: 0.8rem;
    }

    /* üìç TEXTE LOCALISATION */
    :global(.contact-location) {
      font-size: 0.9rem;
      color: var(--muted);
      margin-bottom: 2rem;
    }

    :global(.contact-field) {
      display: flex;
      flex-direction: column;
      margin-bottom: 1.4rem;
    }

    /* üî§ LABELS = m√™me typo que le titre */
    :global(.contact-field label) {
      font-family: 'Cormorant Garamond', serif;
      font-size: 0.95rem;
      color: var(--text);
      margin-bottom: 0.4rem;
    }

    :global(.contact-field input),
    :global(.contact-field textarea) {
      width: 100%;
      background: var(--bg);
      border: none;
      border-radius: 8px;
      padding: 0.9rem 1rem;
      font-family: 'Inter', sans-serif;
      font-size: 0.95rem;

      box-shadow:
        inset 3px 3px 6px rgba(0,0,0,0.06),
        inset -3px -3px 6px rgba(255,255,255,0.6);
    }

    :global(.contact-field textarea) {
      min-height: 120px;
      resize: vertical;
    }

    :global(.contact-submit) {
      width: 100%;
      margin-top: 1.6rem;
      background: var(--brown);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 1rem;
      font-size: 0.95rem;
      cursor: pointer;
      box-shadow: 0 8px 18px rgba(0,0,0,0.18);
    }

    :global(.contact-social) {
      margin-top: 2rem;
      font-size: 0.9rem;
    }
    
    :global(.instagram-link) {
      display: inline-flex;
      align-items: center;
      gap: 0.55rem;

      text-decoration: none;
      color: var(--muted);
      font-size: 0.9rem;

      transition: color 0.2s ease, opacity 0.2s ease;
    }

    :global(.instagram-link svg) {
      flex-shrink: 0;
      opacity: 0.75;
    }

    :global(.instagram-link:hover) {
      color: var(--brown);
    }

    :global(.instagram-link:hover svg) {
      opacity: 1;
    }

    @media (max-width: 900px) {
      :global(.contact-wrapper) {
        grid-template-columns: 1fr;
        padding: 2rem;
      }

      :global(.contact-image img) {
        min-height: 280px;
      }
    }

    footer p {
      font-size: 0.85rem;
      color: var(--muted);
    }

    /* ========================= */
    /* === HEADER BRAND ======== */
    /* ========================= */

    .site-header {
      max-width: 1200px;
      margin: auto;
      padding: 3rem 2rem 2.5rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }

    .brand {
      display: flex;
      flex-direction: column;
    }

    .brand-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 2.8rem;
      line-height: 1.05;
      color: var(--brand-main);
    }

    .brand-tagline {
      margin-top: 0.6rem;
      font-size: 0.7rem;
      letter-spacing: 0.35em;
      text-transform: uppercase;
      color: var(--brand-muted);
    }

    .main-nav {
      margin-top: 1.2rem;
    }

    .main-nav a {
      margin-left: 1.8rem;
      font-size: 0.95rem;
      color: var(--muted);
    }

    .main-nav a:hover {
      color: var(--text);
    }

    /* Responsive header */
    @media (max-width: 900px) {
      .site-header {
        flex-direction: column;
        gap: 1.8rem;
      }

      .main-nav {
        margin-top: 0;
      }

      .main-nav a {
        margin-left: 0;
        margin-right: 1.4rem;
      }
    }

  </style>
</head>

<body>
 <header class="site-header">
  <div class="brand">
    <span class="brand-name">
      Pierre<br />Barthes
    </span>
    <span class="brand-tagline">
      Artisan b√¢tisseur
    </span>
  </div>

  <nav class="main-nav">
    <a href={`${base}`}>Accueil</a>
    <a href={`${base}atelier/`}>L‚ÄôAtelier</a>
    <a href={`${base}savoir-faire/`}>Savoir-faire</a>
    <a href={`${base}realisations/`}>R√©alisations</a>
    <a href={`${base}contact/`}>Contact</a>
  </nav>
</header>

  <main>
    <slot />
  </main>

  <footer>
    <p>¬© {new Date().getFullYear()} ‚Äî Pierre Barth√®s ¬∑ Ma√ßonnerie traditionnelle & patrimoine</p>
  </footer>
</body>
</html>
