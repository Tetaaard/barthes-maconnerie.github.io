---
const { title = "Barth√®s Ma√ßonnerie" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <meta
    name="description"
    content="Ma√ßonnerie traditionnelle, restauration du patrimoine et √©co-construction. Savoir-faire artisanal."
  />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <link
    href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Inter:wght@300;400;500&display=swap"
    rel="stylesheet"
  >

  <style>
    :root {
      --bg: #f6f4ef;
      --text: #1e1e1e;
      --muted: #6f6f6f;
      --beige: #f1ede4;
      --dark: #2f3441;
      --brown: #3e2721;
      --brand-main: #6b2e2a;   /* brun/bordeaux du logo */
      --brand-muted: #8a6f6a;
    }

    * {
      box-sizing: border-box;
    }

body {
  margin: 0;
  font-family: 'Inter', sans-serif;
  background: var(--bg);
  color: var(--text);
  line-height: 1.6;
}

    h1, h2, h3 {
      font-family: 'Cormorant Garamond', serif;
      font-weight: 600;
      margin-top: 0;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    footer {
      padding: 2rem;
      max-width: 1200px;
      margin: auto;
    }

    header h1 {
      margin-bottom: 0.5rem;
    }

    nav a {
      margin-right: 1.5rem;
      font-size: 0.95rem;
      color: var(--muted);
    }

    nav a:hover {
      color: var(--text);
    }
    
    .page-wrapper {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    main {
      flex: 1;
      max-width: 1400px;
      margin: auto;
      padding: 2rem;
    }

    section {
      margin-bottom: 4rem;
    }

    article {
      max-width: 900px;
      margin: auto;
    }

    article p {
      margin-bottom: 1.2rem;
      color: #2a2a2a;
    }
    
    :global(h2) {
      font-family: 'Cormorant Garamond', serif;
      font-weight: 600;
    }

    /* ========================= */
    /* === PROJECTS GRID ======= */
    /* ========================= */

    :global(.projects-grid) {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-top: 3rem;
    }

    :global(.project-card) {
      position: relative;
      display: block;
      overflow: hidden;
      border-radius: 3px; /* tr√®s l√©ger */
      background: #000;
    }

    :global(.project-card img) {
      width: 100%;
      height: 100%;
      aspect-ratio: 3 / 4;
      object-fit: cover;
      display: block;
      transition: transform 0.6s ease;
    }

    :global(.project-overlay) {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.45),
        rgba(0, 0, 0, 0.15)
      );
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 1.4rem;
      color: var(--beige);
    }

    :global(.project-overlay h3) {
      margin: 0 0 0.4rem;
      font-size: 1.25rem;
      line-height: 1.2;
    }

    :global(.project-overlay p) {
      margin: 0;
      font-size: 0.9rem;
      opacity: 0.9;
    }

    :global(.project-card:hover img) {
      transform: scale(1.04);
    }

    /* ========================= */
    /* === CAROUSEL ============ */
    /* ========================= */

    :global(.carousel) {
      position: relative;
      margin-top: 3rem;
    }

    :global(.carousel-track) {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
    }

    :global(.carousel-track::-webkit-scrollbar) {
      display: none;
    }

    :global(.carousel-track img) {
      flex: 0 0 100%;
      max-height: 70vh;
      object-fit: contain;
      scroll-snap-align: center;
      border-radius: 4px;
      background: #eae6dc;
    }

    /* Navigation */

    :global(.carousel-btn) {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(246, 244, 239, 0.95);
      border: none;
      font-size: 2rem;
      padding: 0.4rem 0.8rem;
      cursor: pointer;
      z-index: 10;
    }

    :global(.carousel-btn.prev) { left: 0.5rem; }
    :global(.carousel-btn.next) { right: 0.5rem; }

    /* ========================= */
    /* === CONTACT ============= */
    /* ========================= */

    :global(.contact-wrapper) {
      display: grid;
      grid-template-columns: 0.85fr 1.15fr;
      gap: 3rem;
      padding: 3.2rem;
      background: var(--beige);
      border-radius: 14px;
      border: 1px solid rgba(0,0,0,0.03);


    }

    :global(.contact-image) {
      border-radius: 10px;
      overflow: hidden;
    }

    :global(.contact-image img) {
      width: 100%;
      height: 100%;
      min-height: 540px;
      object-fit: cover;
      display: block;
    }

    :global(.contact-form) {
      background: var(--bg);
      padding: 3rem;
      border-radius: 12px;
      box-shadow:
        6px 6px 18px rgba(0,0,0,0.08),
        -6px -6px 18px rgba(255,255,255,0.7);
    }

    /* üî§ TITRE FORMULAIRE = m√™me typo que le logo */
    :global(.contact-form h2) {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.9rem;
      margin-bottom: 0.6rem;
    }

    :global(.contact-intro) {
      color: var(--text);
      margin-bottom: 0.8rem;
    }

    /* üìç TEXTE LOCALISATION */
    :global(.contact-location) {
      font-size: 0.9rem;
      color: var(--muted);
      margin-bottom: 2rem;
    }

    :global(.contact-field) {
      display: flex;
      flex-direction: column;
      margin-bottom: 1.4rem;
    }

    /* üî§ LABELS = m√™me typo que le titre */
    :global(.contact-field label) {
      font-family: 'Cormorant Garamond', serif;
      font-size: 0.95rem;
      color: var(--text);
      margin-bottom: 0.4rem;
    }

    :global(.contact-field input),
    :global(.contact-field textarea) {
      width: 100%;
      background: var(--bg);
      border: none;
      border-radius: 8px;
      padding: 0.9rem 1rem;
      font-family: 'Inter', sans-serif;
      font-size: 0.95rem;

      box-shadow:
        inset 3px 3px 6px rgba(0,0,0,0.06),
        inset -3px -3px 6px rgba(255,255,255,0.6);
    }

    :global(.contact-field textarea) {
      min-height: 120px;
      resize: vertical;
    }

    :global(.contact-submit) {
      width: 100%;
      margin-top: 1.6rem;
      background: var(--brown);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 1rem;
      font-size: 0.95rem;
      cursor: pointer;
      box-shadow: 0 8px 18px rgba(0,0,0,0.18);
    }

    :global(.contact-social) {
      margin-top: 2rem;
      font-size: 0.9rem;
    }
    
    :global(.instagram-link) {
      display: inline-flex;
      align-items: center;
      gap: 0.55rem;

      text-decoration: none;
      color: var(--muted);
      font-size: 0.9rem;

      transition: color 0.2s ease, opacity 0.2s ease;
    }

    :global(.instagram-link svg) {
      flex-shrink: 0;
      opacity: 0.75;
    }

    :global(.instagram-link:hover) {
      color: var(--brown);
    }

    :global(.instagram-link:hover svg) {
      opacity: 1;
    }

    @media (max-width: 900px) {
      :global(.contact-wrapper) {
        grid-template-columns: 1fr;
        padding: 2rem;
      }

      :global(.contact-image img) {
        min-height: 280px;
      }
    }

    footer p {
      font-size: 0.85rem;
      color: var(--muted);
    }

  /* ========================= */
/* === HEADER BRAND ========= */
/* ========================= */

.site-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  width: 100%;
  background: var(--bg);
}


.site-header-inner {
  max-width: 1200px;
  margin: auto;
  padding: 2rem;

  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

/* Logo */
.brand {
  display: flex;
  flex-direction: column;
  gap: 0.35rem;
}

.brand-name {
  font-family: 'Cormorant Garamond', serif;
  font-size: 2.6rem;
  line-height: 1.05;
  color: var(--brand-main);
}

.brand-tagline {
  font-family: 'Inter', sans-serif;
  font-size: 0.7rem;
  letter-spacing: 0.28em;
  text-transform: uppercase;
  color: var(--brand-muted);
}

/* Navigation */
.main-nav {
  display: flex;
  gap: 2.2rem;
  padding-top: 5rem;
}
.main-nav a {
  font-size: 0.95rem;
  color: var(--muted);
  transition: color 0.2s ease;
}

.main-nav a:hover {
  color: var(--text);
}
/* ========================= */
/* === RESPONSIVE HEADER ==== */
/* ========================= */

@media (max-width: 900px) {
  .site-header-inner {
    flex-direction: row;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .main-nav {
    padding-top: 0; /* reset mobile */
    flex-wrap: wrap;
    gap: 1.4rem;
  }
}
/* ========================= */
/* === SAVOIR-FAIRE GRID ==== */
/* ========================= */

:global(.savoir-faire) {
  max-width: 1100px;
  margin: auto;
}

:global(.savoir-faire-header) {
  margin-bottom: 3rem;
}

:global(.savoir-faire-header p) {
  max-width: 620px;
  color: var(--muted);
}

/* ‚úÖ GRILLE 2 x 2 */
:global(.savoir-faire-grid) {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 3rem;
}

/* Carte */
:global(.savoir-faire-item) {
  display: flex;
  flex-direction: column;
  gap: 0.9rem;
}

/* Image */
:global(.savoir-faire-item img) {
  width: 100%;
  max-width: 320px;
  height: auto;
}

/* Texte */
:global(.savoir-faire-item h3) {
  margin-top: 0.6rem;
}

:global(.savoir-faire-item p) {
  margin: 0;
  font-size: 0.95rem;
  line-height: 1.6;
}

/* üì± Mobile */
@media (max-width: 800px) {
  :global(.savoir-faire-grid) {
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }

  :global(.savoir-faire-item img) {
    max-width: 260px;
  }
}

/* ========================= */
/* === BURGER BUTTON ======= */
/* ========================= */

.burger {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.burger span {
  display: block;
  width: 26px;
  height: 2px;
  background: var(--brand-main);
  margin: 6px 0;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

/* ========================= */
/* === BURGER ANIMATION ==== */
/* ========================= */

.burger.open span:nth-child(1) {
  transform: translateY(8px) rotate(45deg);
}

.burger.open span:nth-child(2) {
  opacity: 0;
}

.burger.open span:nth-child(3) {
  transform: translateY(-8px) rotate(-45deg);
}

/* ========================= */
/* === MOBILE NAVIGATION === */
/* ========================= */

@media (max-width: 900px) {
  .brand {
    flex: 1;
  }

  .burger {
    display: block;
    margin-left: auto;
    margin-top: 0;
  }

  /* ‚õîÔ∏è Menu cach√© par d√©faut en mobile */
  .main-nav {
    display: none;
    width: 100%;
    padding-top: 0;
    flex-direction: column;
    gap: 1.2rem;
    margin-top: 1.5rem;
  }

  /* ‚úÖ Menu visible uniquement quand ouvert */
  .main-nav.open {
    display: flex;
  }
}

/* ========================= */
/* === ATELIER ALTERN√â ===== */
/* ========================= */

:global(.atelier-alt) {
  width: 100%;
  padding: 4rem 0;
}

:global(.atelier-inner) {
  max-width: 1200px;
  margin: auto;
  display: flex;
  flex-direction: column;
  gap: 6rem;
}

:global(.atelier-row) {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

/* Inversion visuelle */
:global(.atelier-row.reverse) {
  grid-template-areas: "content media";
}

:global(.atelier-row:not(.reverse)) {
  grid-template-areas: "media content";
}

:global(.atelier-media) {
  grid-area: media;
}

:global(.atelier-content) {
  grid-area: content;
  max-width: 460px;
}

:global(.atelier-media img) {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 2px;
}

:global(.atelier-lead) {
  font-family: 'Cormorant Garamond', serif;
  font-size: 1.2rem;
  margin-bottom: 1rem;
}

@media (max-width: 900px) {
  :global(.atelier-row),
  :global(.atelier-row.reverse) {
    grid-template-columns: 1fr;
    grid-template-areas:
      "media"
      "content";
    gap: 2rem;
  }

  :global(.atelier-content) {
    max-width: 100%;
  }
}


  </style>
</head>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const burger = document.querySelector('.burger');
    const nav = document.querySelector('.main-nav');

    if (!burger || !nav) return;

    burger.addEventListener('click', () => {
      burger.classList.toggle('open');
      nav.classList.toggle('open');
    });
  });
</script>
<body>
 <div class="page-wrapper">
<header class="site-header">
<div class="site-header-inner">
  <div class="brand">
    <span class="brand-name">
      Pierre<br />Barthes
    </span>
    <span class="brand-tagline">
      ARTISAN B√ÇTISSEUR
    </span>
  </div>

  <!-- üçî Bouton burger -->
  <button class="burger" aria-label="Ouvrir le menu">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <nav class="main-nav">
    <a href={`${base}`}>Accueil</a>
    <a href={`${base}realisations/`}>R√©alisations</a>
    <a href={`${base}atelier/`}>L‚ÄôAtelier</a>
     <a href={`${base}savoir-faire/`}>Savoir-faire</a>
    <a href={`${base}contact/`}>Contact</a>
  </nav>
</div>

</header>

  <main>
    <slot />
  </main>

  <footer>
    <p>¬© {new Date().getFullYear()} ‚Äî Pierre Barth√®s ¬∑ Ma√ßonnerie traditionnelle & patrimoine</p>
  </footer>
 </div>
</body>
</html>
